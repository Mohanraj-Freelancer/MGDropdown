Pod::Spec.new do |s|
  s.name             = 'MGDropdown'
  s.version          = '1.0.0'
  s.summary          = 'A clean, customizable dropdown for iOS (SwiftUI + UIKit).'

  s.description      = <<-DESC
MGDropdown is a powerful SwiftUI + UIKit dropdown component with:
- Material animations
- Search support
- Tap-outside-to-dismiss
- Pure SwiftUI implementation
- UIKit dropdown with UITextField search
DESC

  s.homepage         = 'https://github.com/Mohanraj-Freelancer/MGDropdown'
