  s.author           = { 'Mohanraj G' => 'moto37970@gmail.com' }

  s.source           = {
    :git => 'https://github.com/Mohanraj-Freelancer/MGDropdown.git',
    :tag => s.version.to_s
  }

  s.ios.deployment_target = '13.0'
  s.swift_version         = '5.9'

  s.source_files = 'Sources/MGDropdown/**/*.{swift}'
end
